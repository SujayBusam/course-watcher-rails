<% provide(:title, @user.email) %>

<h1>
  <%= @user.name %>
  <br>
  <%= @user.email %>
</h1>

<div class="col-lg-12">
  <div class="page-header">
    <h1 id="tables">My Courses</h1>

  </div>
</div>

<% if @courses.count == 0 %>
  <p>Looks like you haven't added any courses yet. Get started!</p>
<% else %>
  <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th>#</th>
        <th>Course subject</th>
        <th>Course number</th>
        <th>Availability</th>
        <th>More Info</th>
      </tr>
    </thead>
    <tbody>
      <% @courses.each do |course| %>
        <tr class="info">
          <td><%= @current_course_count %> )</td>
          <td><%= course.subject %></td>
          <td><%= course.number %></td>
          <td>TODO</td>
          <td><a href="<%= course_selection_path(course.id) %>">Configure</a></td>
          <% @current_course_count = @current_course_count + 1 %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to "Add a course!", new_course_selection_path, class: "btn btn-default" %>
