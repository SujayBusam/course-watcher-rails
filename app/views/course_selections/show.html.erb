<% provide(:title, @title) %>


<h2><%= @course.subject %> <%= @course.number %></h2>
<h4>Section: <%= @course.section %></h4>
<ul class="list-group center" id="course-show">
  <li class="list-group-item active">
    <%= @course.title %>
  </li>

  <li class="list-group-item">
    <span class="badge"><%= print_attribute(@course.period) %></span>
    Period
  </li>

  <li class="list-group-item">
    <span class="badge"><%= print_attribute(@course.instructor) %></span>
    Instructor
  </li>

  <li class="list-group-item">
    <span class="badge"><%= print_attribute(@course.limit) %></span>
    Limit
  </li>

  <li class="list-group-item">
    <span class="badge"><%= print_attribute(@course.enrollment) %></span>
    Enrolled
  </li>

  <li class="list-group-item">
    <span class="badge"><%= print_attribute(@course.status) %></span>
    Status
  </li>

  <li class="list-group-item">
    <span class="badge"><%= print_attribute(@course.cross_list) %></span>
    Xlist
  </li>

  <li class="list-group-item">
    <span class="badge"><%= print_attribute(@course.room) %></span>
    Room
  </li>

  <li class="list-group-item">
    <span class="badge"><%= print_attribute(@course.building) %></span>
    Building
  </li>

  <li class="list-group-item">
    <span class="badge"><%= print_attribute(@course.distrib) %></span>
    Distrib
  </li>

  <li class="list-group-item">
    <span class="badge"><%= print_attribute(@course.world_culture) %></span>
    World Culture
  </li>

  <li class="list-group-item">
    <span class="badge"><%= print_attribute(@course.crn) %></span>
    CRN
  </li>

</ul>


<%= form_for @course_selection, html: { method: :delete } do |f| %>
  <%= f.submit "Unwatch Course", class: "btn btn-danger" %>
<% end %>

<ul class="pager">
  <li><%= link_to "Back to profile", user_path(current_user) %></li>
</ul>